@using TicketDesk.Web.Identity


<li class="dropdown">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
        <i class="fa fa-user"></i><span class="">
            @(User.Identity.IsAuthenticated ? User.Identity.GetUserDisplayName() : "Account")
        </span>
        <span class="caret"></span>
    </a>
    <ul class="dropdown-menu" role="menu">
        @if (User.Identity.IsAuthenticated)
        {
            <li>
                @Html.ActionLink("My Account", "Manage", "Account")
            </li>
            <li>
                @Html.ActionLink("Log Off", "SignOut", "User")
            </li>
        }
        else
        {
            <li>@Html.ActionLink("Register", "Register", "User", null, new { id = "registerLink" })</li>
            @*<li>@Html.ActionLink("Sign In", "SignIn", "User", null, new { id = "loginLink" })</li>*@
            <li>@Html.ActionLink("Sign In", "Login", "Account", null, new { id = "loginLink" })</li>
        }
    </ul>

</li>

